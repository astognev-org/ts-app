{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "rootDir": "src",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "verbatimModuleSyntax": false
  },

  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist", "tests"]
}
